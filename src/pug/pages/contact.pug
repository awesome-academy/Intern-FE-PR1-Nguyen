extend ../base/base.pug
block toppage 
    - const title = "Liên Hệ"
    - const currentUrl = "/contact"
block content 
    section.contact 
        .container.contact__container 
            +breadcrumb("Trang chủ", "Địa chỉ")
            +introHead("liên hệ", "title")
            .contact__content.d-md-flex.mt-4
                .contact__map.col-md-8
                   iframe(src='https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d15334.950531554672!2d108.178457!3d16.07909905!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2s!4v1626760249986!5m2!1sen!2s' width='100%' height='410' allowfullscreen='' loading='lazy' style='border:none;')
                .contact__company.col-md-4 
                    .contact__img 
                        img(src="/assets/img/logo-primary.png", alt="contact logo")
                    ul.contact__list.mt-3 
                        li.contact__item 
                            i(class="fas fa-map-marker-alt")  Tầng 4, Tòa nhà Hanoi Group Số 442 Đội Cấn, P. Cống Vị, Q. Ba Đình, Hà Nội
                        li.contact__item.my-3
                            i(class="fas fa-phone-alt")  (04) 6674 2332
                        li.contact__item
                            i(class="fas fa-envelope")  support@ milano.com
                    .contact__social
                        h3.contact__title follow us:
                        ul.contact__list.d-md-flex.d-flex
                            each socialItem in socialList
                                li.contact__item.mr-2
                                    i(class=socialItem)
            .contact__form.col-md-8.mt-5 
                .form 
                    +formGroup("Your Name", "yourName", "text", "", true)
                    +formGroup("Your Email", "yourEmail", "email", "", true)
                    +formGroup("Subject", "yourSubject", "text", "", true)
                    +formGroup("Your Message", "yourMessage", "text", "", false)
                    .contact__button.col-md-10.offset-md-2
                        +button("Gửi")
