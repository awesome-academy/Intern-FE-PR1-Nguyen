extend ../base/base.pug
block toppage
    - const title = "Đăng nhập"
    - const currentUrl = "/login"
block content 
    section.login 
        .container.login__container 
            +breadcrumb("Trang chủ", "Đăng nhập")
            .login__title.d-md-flex
                +introHead("đăng nhập", "title")
                +button("đăng ký")
            .login__form.form--border.mt-3 
                form
                    h3.form__caption khách hàng đăng nhập
                    p.login__sub Nếu bạn có một tài khoản, xin vui lòng đăng nhập.
                    +formCustom("Email *", "emailLogin", "email", none)
                    +formCustom("Pasword *", "passwordLogin", "password", none)
                    +formCustom("Quên mật khẩu", "checkPassword", "checkbox", none)
                    .login__button 
                        +button("đăng nhập")
